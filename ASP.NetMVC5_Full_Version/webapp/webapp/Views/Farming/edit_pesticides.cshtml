@model SmartAdminMvc.Models.DbEntity.USP_Pesticides_Get_Result
<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER --><i class="fa-fw fa fa-home"></i> Farming <span>
                    &gt;
                    <a style="color:#3276b1;text-decoration:underline" href="@Url.Action("Pesticides", "Farming")">Pesticides</a> &gt;Edit Pesticides
                </span>
            </h1>
        </div>
        <!-- end col -->
    </div>
    <div id="content1" class="col-lg-6 col-sm-6">


        <h1>Edit Pesticides</h1>


        <div class="box-content">
            <form role="form" action="add_pests" method="POST">
                @Html.HiddenFor(model => model.PesticideID)
                <div class="form-group">
                    <label for="exampleInputEmail1">Pesticide Name:</label>
                    @Html.TextBoxFor(model => model.PesticideName, new { @class = "form-control", @placeholder = "pesticide name" })
                   
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Certification Number:</label>
                    @Html.TextAreaFor(model => model.CertificationNumber, new { @class = "form-control", @placeholder = "certification number" })
                 
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Active Indegrident:</label>
                    @Html.TextBoxFor(model => model.ActiveIndegrident, new { @class = "form-control", @placeholder = "pesticide name" })
                   
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Pre-Harvest Interval</label>
                    @Html.TextBoxFor(model => model.RestrictedEntryInterval, new { @class = "form-control", @placeholder = "Pre-Harvest Interval" })
                    
                </div>
                
                <div class="form-group">
                    <label for="exampleInputEmail1">Pesticide Label Signal Word:</label>
                    @Html.TextBoxFor(model => model.PesticideLabelSignalWord, new { @class = "form-control", @placeholder = "Pesticide Label Signal Word" })
                    
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">WPS Oral Notification:</label>
                    @Html.TextBoxFor(model => model.WPSOralNotification, new { @class = "form-control", @placeholder = "WPS Oral Notification" })
                   
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        <button type="submit" class="btn btn-success btn-sm btn-block">Update</button>
                    </div>
                   
                    <div class="col-md-3 col-sm-3">
                      <a class="btn btn-primary btn-block" style="color:white;" href="@Url.Action("pesticides", "Farming")">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>