@model SmartAdminMvc.Models.DbEntity.USP_Categories_Get_Result
<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER --><i class="fa-fw fa fa-home"></i> Products <span>
                    &gt;
                    <a style="color:#3276b1;text-decoration:underline" href="@Url.Action("categories", "Products")">Categories</a> &gt;Edit Category
                </span>
            </h1>
        </div>
        <!-- end col -->
    </div>
    <div id="content1" class="col-lg-6 col-sm-6">


        <h1>Edit Pests</h1>


        <div class="box-content">
            <form role="form" action="add_pests" method="POST">
                @Html.HiddenFor(model => model.CategoryID)
                <div class="form-group">
                    <label for="exampleInputEmail1">Pest Name:</label>
                    @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", @placeholder = "cetegory name" })
                    @*<input type="text" name="pest_name" id="pest" class="form-control" placeholder="pest name">*@
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Description:</label>
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "description", @row = 5 })
                    @*<textarea name="description" id="pest1" class="form-control" placeholder="description" rows="5"></textarea>*@
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        <button type="submit" class="btn btn-success btn-sm btn-block">Update</button>
                    </div>
                    @*<div class="col-md-3 col-sm-3">
                            <button type="submit" name="addmore" class="btn btn-info btn-sm btn-block">Save &amp; Add More..</button>
                        </div>*@
                    <div class="col-md-3 col-sm-3">
                        <button type="reset" class="btn btn-primary btn-block">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>