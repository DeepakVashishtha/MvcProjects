@model SmartAdminMvc.Models.DbEntity.USP_Pests_Get_Result
<div id="content">
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER --><i class="fa-fw fa fa-home"></i> Farming <span>
                    &gt;
                                                                                 <a style="color:#3276b1;text-decoration:underline" href="@Url.Action("pests", "Farming")">Pests</a> &gt;Edit Pests
                </span>
            </h1>
        </div>
        <!-- end col -->
    </div>
    <div id="content1" class="col-lg-6 col-sm-6">


        <h1>Edit Pests</h1>


        <div class="box-content">
            <form role="form" action="add_pests" method="POST">
               @Html.HiddenFor(model => model.PestID)
                <div class="form-group">
                    <label for="exampleInputEmail1">Pest Name:</label>
                    @Html.TextBoxFor(model => model.PestName, new { @class = "form-control", @placeholder = "pest name" })
                   
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Description:</label>
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "description", @row = 5 })
                   
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        <button type="submit" class="btn btn-success btn-sm btn-block">Update</button>
                    </div>
                    
                    <div class="col-md-3 col-sm-3">
                        <a class="btn btn-primary btn-block" style="color:white;" href="@Url.Action("pests", "Farming")">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>